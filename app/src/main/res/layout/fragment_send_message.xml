<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendMessagePanel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="horizontal"
    android:paddingStart="6sp"
    android:visibility="visible"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/attachFile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/send_file_button_hint"
            android:paddingLeft="6sp"
            android:paddingRight="6sp"
            android:tint="@color/colorBorderRed"
            app:srcCompat="@drawable/ic_attach" />

        <ImageButton
            android:id="@+id/attachImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/send_image_button_hint"
            android:paddingLeft="6sp"
            android:paddingRight="6sp"
            android:tint="@color/연락혀대표"
            app:srcCompat="@drawable/ic_photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/microphone"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="0.1"
            android:background="@color/연락혀대표"
            android:contentDescription="dkdd"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="내용 입력"
            android:imeOptions="actionSend"
            android:inputType="textShortMessage"
            android:textColor="@color/colorTextPrimary"
            android:textSize="36sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/chatSendButton"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/send_message_button_hint"
        android:paddingLeft="4sp"
        android:paddingRight="8sp"
        android:tint="@color/연락혀대표"
        app:srcCompat="@drawable/ic_send" />


</LinearLayout>

